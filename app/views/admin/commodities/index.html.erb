<section class="section">
	<div class="container">
		<br>
		<h1 class="title has-text-centered">商品列表</h1>
		<% @types.each do |type| %>
		  <br>	
		  <br>
		  <br>
		  <div class="columns">
		  <div class="column">
		  <div class="title">
		  	 <%= type.name%>
		  </div>		  	
		  </div>

		  <div class="colum is-right">
		  	<%= link_to '刪除',admin_path(type.id),method: :delete,data: {confirm:'要刪除嘛？'},class:'button is-danger '%>
		  </div>		  	
		  </div>

		  <hr>
		  <br>
		  <br>
		  <div class="columns">
		  	<% type.products.each do |product| %>
		    <div class="column is-3">
		    	<div class="card">
		    		<div class="card-image">
		    			<figure class="image is-318x318">
		    				<%= link_to  admin_commodity_path(product) do%>
		    				<%= image_tag product.pictures%>
		    				<% end %>
		    			</figure>
		    		</div>
		    		<div class="card-content">
		    			<div class="columns is-5">
		    				<div class="column">
		    					<div class="title">
		    			          <%= product.name %>
		    			        </div>
		    				</div>
		    			
		    			<div class="column is-3">
		    			<%= link_to  edit_admin_commodity_path(product) do%>
		    			<div class="button is-medium ">
		    			  <i class="fa fa-pencil fa-2 " aria-hidden="true"></i>
		    			</div>	
		    			<% end %>	    				
		    			</div>
		    			</div>

		    			<div>
		    			<div class="column ">
						  <div class="column">
							<div class="columns">
								<div class="column">
									售價 : $<%= product.price %>
								</div>
								<div class="column has-text-right">
									<% if !product.shelve %>
										<p class="button is-danger is-outlined">已下架</p>
									<% end %>
								</div>
							</div>						  	
						  </div>


							<div class="column">
								敘述 : <%=truncate product.description, length: 50, omission:'...'%>
							</div>
		    			</div>

		    			</div>    			
		    		</div>
		    	</div>
		    </div>
		  <% end %>
		  </div>
		  
		<% end %>

	</div>
</section>