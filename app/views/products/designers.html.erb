<section class="section">
	<div class="container">
		<h1 class="title has-text-centered">設計師列表</h1>
		<% @designers.each do |designer| %>
		  <br>	
		  <hr>
		  <br>
		  <br>
		  <div class="columns">
		    <div class="column is-3">
		    	<div class="card">
		    		<div class="card-image">
		    			<figure class="image is-square">
		    				<%= image_tag designer.image %>
		    			</figure>
		    		</div>
		        </div>	
		    </div>	    		  			
	    	<div class="column ">
	    				  <div class="title">
		  	 <%= designer.name%>
		  </div>
				<div class="card-content">
	    			  <%=simple_format  designer.description%>
		    	</div>
		    </div>  
	      </div>
	      <% end %>
</section>