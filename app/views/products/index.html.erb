<section class="section">
	<div class="container">	
		<p class="title has-text-danger "><%= flash[:note] %></p>				
		<h1 class="title has-text-centered has-text-success" >商品列表</h1>
		<% @types.each do |type| %>
		  <br>	
		  <br>
		  <br>
		  <div class="title" >
		  	<% if type.products.find_by(shelve:true) %>
				<%= type.name%>	  			  	
		  </div>		  	
		  <hr>
		<% end %>		  

		  <div class="columns is-multiline">
		  	<% type.products.each do |product| %>
			  	<% if product.shelve %>
				    <div class="column is-3" id="floatobject">
				    	<div class="card" id="floatobject2">
				    		<div class="card-image">
				    			<figure class="image is-318x318 is-hidden-mobile" id="float" style="width:100%">
				    				<%= link_to  product_path(product) do%>
				    				<%= image_tag product.pictures,style:'height:100%;max-width:none;width:auto' %>
				    				<% end %>
				    			</figure>
				    			<figure class="image is-318x318 is-hidden-desktop" id="float" style="width:100%">
				    				<%= link_to  product_path(product) do%>
				    				<%= image_tag product.pictures,style:'height:100%;max-width:none;width:auto' %>
				    				<% end %>
				    			</figure>				    			
				    		</div>				    		
		    		<div class="card-content">
		    				<div class="column">
		    					<div class="title">
		    			          <%= product.name %>
		    			        </div>
		    				</div>
						  <div class="column">					  	
							<div class="columns">
								<div class="column">
									售價 : 
									<div class="title is-size-4">
									 NT$<%= product.price %>										
									</div>
								</div>

							</div>						  	
						  </div>
		
		    		</div>

				    </div>
				    </div>			  		
			  	<% end %>
		    <% end %>
		  </div>
		  
		<% end %>

	</div>
</section>