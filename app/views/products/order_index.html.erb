<section class="section">
	<div class="container">
		<p class="title has-text-danger "><%= flash[:note] %></p>
		<div class="title has-text-centered">購買清單</div>
	  <% @ordered_items.each do |item| %>
	   <div class="box">
		<div class="columns">
			<div class="column is-2">
				<figure class="image is-128x128">
				  <%= image_tag item.product.pictures %>
			    </figure>
			</div>
			<div class="column has-text-left">
				<div class="has-text-grey">
				商品名稱:
				<br>					
				</div>
				<div class="title is-size-3 ">
					<%= item.product.name%>			
				</div>
				<div class="has-text-grey">
				售價:
				<br>					
				</div>

				<div class="title is-size-3 ">
					<%= item.product.price %>
			    </div>	
			</div>
			<div class="column is-size-4 has-text-centered">
				<div class="column">	
					<%=form_for item do |f| %>
					<div class="columns has-text-right">
						<div class="column is-7">
					      <%= f.label :quantities,'數量:', class: 'label is-size-4 ' %>							
						</div>
						<div class="column">
					      <%= f.number_field :quantities,class: 'input', min:1 %>
						</div>
						<div class="column">
					      <%= f.submit '計算價格' ,class:"button is-light"%>							
						</div>
					</div>
					<% end %>					
				</div>
				<div class="column  has-text-right label is-size-4 ">
					單筆金額:<%= item.total %>元
				</div>
				<div class="column has-text-right">
					<%= link_to '刪除',item_destroy_path(item),method: :delete,data: {confirm:'要刪除嘛？'},class:'button is-danger '%>
				</div>				
			</div>
		</div>	   	
	   </div>

	 <% end %>	
	 <hr>
	 <div class="column title has-text-right has-text-danger">
	 	總金額：<%= @order.total %> 元
	 </div>
	<div class="columns">
	 <div class="column has-text-right">
	 	<%= form_for @order,url:option_path do |order| %>
	 	<%= order.text_area :option ,class: 'textarea',placeholder:'若有其他備註請輸入於此...' %>
	 	<div class="column">
	 	<%= link_to '繼續逛街去~' ,products_path ,class:'button is-success is-large is-outlined '%>
	 	<%= order.submit '結帳囉！' ,class:'button is-danger is-large is-outlined '%>	 		
	 	</div>
	 	<% end %>
	 </div>
	</div>
	</div>
</section>

