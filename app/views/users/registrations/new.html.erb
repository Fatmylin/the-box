<div class="columns">
  <div class="column  is-4 is-offset-4">
    <br>
    <br>
    <br>
    <h1 class="title has-text-centered">Sign up</h1>
    <div class="box">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  
  <div class="field">
    <%= f.label :email , class: 'label'%><br />
    <%= f.email_field :email, class: 'input', autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'label' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: 'input', autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation , class: 'label'%><br />
    <%= f.password_field :password_confirmation, class: 'input', autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
<% end %>
<%= render "users/shared/links" %>
    </div>

  </div>
</div>



